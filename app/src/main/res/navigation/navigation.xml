<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/taskFragment"
        android:name="dev.zurbaevi.todolist.view.fragment.TaskFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_task">
        <action
            android:id="@+id/action_taskFragment_to_addTaskBottomSheetDialogFragment"
            app:destination="@id/addTaskBottomSheetDialogFragment" />
        <action
            android:id="@+id/action_taskFragment_to_updateTaskBottomSheetDialogFragment"
            app:destination="@id/updateTaskBottomSheetDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/addTaskBottomSheetDialogFragment"
        android:name="dev.zurbaevi.todolist.view.fragment.AddTaskBottomSheetDialogFragment"
        tools:layout="@layout/fragment_add_task_bottom_sheet_dialog">
        <action
            android:id="@+id/action_addTaskBottomSheetDialogFragment_to_taskFragment"
            app:destination="@id/taskFragment"
            app:popUpTo="@id/taskFragment"
            app:popUpToInclusive="true" />
    </dialog>
    <dialog
        android:id="@+id/updateTaskBottomSheetDialogFragment"
        android:name="dev.zurbaevi.todolist.view.fragment.UpdateTaskBottomSheetDialogFragment"
        tools:layout="@layout/fragment_update_task_bottom_sheet_dialog">
        <action
            android:id="@+id/action_updateTaskBottomSheetDialogFragment_to_taskFragment"
            app:destination="@id/taskFragment"
            app:popUpTo="@id/taskFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="taskEntry"
            app:argType="dev.zurbaevi.todolist.model.TaskEntry" />
    </dialog>
    <fragment
        android:id="@+id/splashFragment"
        android:name="dev.zurbaevi.todolist.view.fragment.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_taskFragment"
            app:destination="@id/taskFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>